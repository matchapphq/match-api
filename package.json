{
  "name": "match-api",
  "workspaces": [
    "services/*"
  ],
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --env-file=.env.dev --watch index.ts",
    "db:dev": "bun run db:setup:dev && bun run db:seed:dev",
    "db:setup": "bun run src/config/setup.db.ts",
    "db:migrate": "bun run db:setup && drizzle-kit migrate",
    "db:generate": "drizzle-kit generate",
    "db:push": "bun run db:setup && drizzle-kit push",
    "db:seed": "bun run scripts/seed-sports.ts && bun run scripts/seed-data.ts && bun run src/config/seeds/fidelity.seed.ts",
    "db:setup:dev": "bun --env-file=.env.dev run src/config/setup.db.ts",
    "db:migrate:dev": "drizzle-kit migrate --config=drizzle.config.dev.ts",
    "db:generate:dev": "drizzle-kit generate --config=drizzle.config.dev.ts",
    "db:push:dev": "drizzle-kit push --config=drizzle.config.dev.ts",
    "db:gen:dev": "bun run db:setup:dev && bun run db:generate:dev && bun run db:migrate:dev  && bun run db:seed:dev",
    "db:seed:dev": "bun --env-file=.env.dev run src/config/seeds/seed-sports.ts && bun --env-file=.env.dev run src/config/seeds/seed-data.ts && bun --env-file=.env.dev run src/config/seeds/fidelity.seed.ts",
    "start": "bun run index.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/geolib": "^2.0.25",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.6",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.38.0",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@neondatabase/serverless": "^1.0.2",
    "@types/nodemailer": "^7.0.4",
    "axios": "^1.13.2",
    "bullmq": "^5.66.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "geolib": "^3.3.4",
    "handlebars": "^4.7.8",
    "hono": "^4.9.6",
    "ioredis": "^5.9.2",
    "nodemailer": "^7.0.12",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "stripe": "^20.1.0",
    "zod": "^4.1.5"
  }
}
