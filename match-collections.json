					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"John Doe\",\n  \"seats\": 4,\n  \"time\": \"2025-10-29T20:00:00Z\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bookings/{{venueId}}",
							"host": ["{{baseUrl}}"],
							"path": ["bookings", "{{venueId}}"]
						}
					}
				},
				{
					"name": "Update Booking",
					"request": {
						"method": "PUT",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"seats\": 6,\n  \"time\": \"2025-10-29T21:00:00Z\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/bookings/{{bookingId}}",
							"host": ["{{baseUrl}}"],
							"path": ["bookings", "{{bookingId}}"]
						}
					}
				},
				{
					"name": "Cancel Booking",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/bookings/{{bookingId}}",
							"host": ["{{baseUrl}}"],
							"path": ["bookings", "{{bookingId}}"]
						}
					}
				}
			]
		}
	]
}