						}
					}
				},
				{
					"name": "Add Broadcast",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Real Madrid vs Barcelona\",\n  \"sport\": \"Football\",\n  \"startTime\": \"2025-10-29T20:00:00Z\",\n  \"endTime\": \"2025-10-29T22:00:00Z\",\n  \"screen\": 1\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/venues/{{venueId}}/broadcasts",
							"host": ["{{baseUrl}}"],
							"path": ["venues", "{{venueId}}", "broadcasts"]
						}
					}
				},
				{
					"name": "Add 2nd Simultaneous Broadcast",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Lakers vs Celtics\",\n  \"sport\": \"Basketball\",\n  \"startTime\": \"2025-10-29T20:30:00Z\",\n  \"endTime\": \"2025-10-29T23:00:00Z\",\n  \"screen\": 2\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/venues/{{venueId}}/broadcasts",
							"host": ["{{baseUrl}}"],
							"path": ["venues", "{{venueId}}", "broadcasts"]
						}
					}
				},
				{
					"name": "Update Broadcast",
					"request": {
						"method": "PUT",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Real Madrid vs Barcelona - La Liga\",\n  \"endTime\": \"2025-10-29T22:30:00Z\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/venues/{{venueId}}/broadcasts/{{broadcastId}}",
							"host": ["{{baseUrl}}"],
							"path": ["venues", "{{venueId}}", "broadcasts", "{{broadcastId}}"]
						}
					}
				},
				{
					"name": "Remove Broadcast",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/venues/{{venueId}}/broadcasts/{{broadcastId}}",
							"host": ["{{baseUrl}}"],
							"path": ["venues", "{{venueId}}", "broadcasts", "{{broadcastId}}"]
						}
					}
				}
			]
		},
		{
			"name": "Bookings",
			"item": [
				{
					"name": "Get All Bookings",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/bookings",
							"host": ["{{baseUrl}}"],
							"path": ["bookings"]
						}
					}
				},
				{
					"name": "Get User Bookings",
					"request": {
						"method": "GET",
						"header": [],
